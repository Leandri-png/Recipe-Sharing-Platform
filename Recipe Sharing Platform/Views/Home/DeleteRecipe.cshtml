@model Recipe_Sharing_Platform.Models.Recipe

@{
    ViewData["Title"] = "Delete Recipe";
}

<h1>Delete Recipe</h1>

<p>Are you sure you want to delete this recipe?</p>

<div>
    <h4>Recipe Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <!-- Add additional details to display if needed -->
    </dl>

    <form asp-action="DeleteRecipe" method="post">
        <input type="hidden" name="id" value="@Model.RecipeId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>
